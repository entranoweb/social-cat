# Production Environment Variables for Coolify Deployment
# Copy this to .env and fill in your production secrets

# Application
NODE_ENV=production

# Database
DB_USER=postgres
DB_PASSWORD={{CHANGE_ME_STRONG_PASSWORD}}
DB_NAME=b0t_prod

# Auth & Encryption (generate with: openssl rand -base64 32)
AUTH_SECRET={{GENERATE_RANDOM_32_BYTES}}
ENCRYPTION_KEY={{GENERATE_RANDOM_32_BYTES}}

# API Keys
OPENAI_API_KEY=sk-{{YOUR_OPENAI_KEY}}
ANTHROPIC_FOUNDRY_API_KEY={{YOUR_ANTHROPIC_KEY}}
ANTHROPIC_FOUNDRY_BASE_URL=https://{{RESOURCE}}.services.ai.azure.com/anthropic/

# Optional: Other provider keys (add as needed)
# TWITTER_BEARER_TOKEN={{YOUR_TWITTER_KEY}}
# STRIPE_SECRET_KEY={{YOUR_STRIPE_KEY}}
# GITHUB_TOKEN={{YOUR_GITHUB_TOKEN}}

# Worker Configuration
WORKFLOW_CONCURRENCY=50
SKIP_MODULE_PRELOAD=false

# Logging
LOG_LEVEL=info

# Port (if not using default 3123)
APP_PORT=3123
